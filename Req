function sysCall_init()
    sim = require('sim')
    simUI=require'simUI'
    base=sim.getObject('../Base')
    self=sim.getObject('..')
        -- Create the custom UI:
    xml = '<ui title="Quantidade de pedidos" closeable="false" resizeable="false" activate="false">'..[[
                <spinbox minimum="0" maximum="18" on-change="pedidos" id="1"/>
            <label text="" style="* {margin-left: 150px;}"/>
        </ui>
        ]]
    ui=simUI.create(xml)
    simUI.setSpinboxValue(ui,1,0)
    -- do some initialization here

end

function pedidos (ui,id,newVal)
    sim.setInt32Signal("np",newVal)
end

